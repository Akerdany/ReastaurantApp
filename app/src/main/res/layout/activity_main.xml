<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

<!--    TODO:   1. Put the icons on the left-->
<!--            2. make the styles-->
<!--            3. background-->
<!--            6. Different logo sizes-->
<!--            4. Keep me signed in-->

    <ImageView
        android:id="@+id/logo_signIn"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/email_signIn"
        style="@style/signIn_layout_kerdany_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint_signIn"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_signIn"
        style="@style/signIn_layout_kerdany_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint_signIn"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_signIn"
        style="@style/signIn_layout_kerdany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signInBtn_text_signIn"
        android:padding="12dp"
        android:onClick="signIn"/>

    <TextView
        android:id="@+id/signUpLink_signIn"
        style="@style/signIn_layout_kerdany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signUpMsg_text_signIn"
        android:gravity="center"
        android:textSize="16dp"/>

    </LinearLayout>
</ScrollView>