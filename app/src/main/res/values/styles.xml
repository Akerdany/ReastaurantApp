<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popuptheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/blueLight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainLayout_style">
        <item name="android:paddingTop">56dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="messageLayout_style">
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="editText_style">
        <item name="android:background">@drawable/buttonstyle</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="button_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">@color/colorGrey</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="button_style_small">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">@color/colorGrey</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="textView_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>
</resources>
